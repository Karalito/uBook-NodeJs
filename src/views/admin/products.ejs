<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <button class="btn" onclick="window.location.href='/admin/add-product'" type="button">Add Product</button>
      <% if (products.length > 0) {%>
      <h1>Products</h1>
      <div class="grid">
        <% for (let product of products ) {%>
        <article class="card product-item">
          <div class="card__image">
            <img
              src="<%= product.imgURL %>"
              alt="<%= product.title %>"
            />
          </div>
          <div class="card__content">
            <header class="card__header">
              <h1 class="product__title"><%= product.title %>  <span> <%= product.author %></span></h1>
            </header>
            <h2 class="product__price">Price: <%= product.price %> â‚¬</h2>
          </div>
          <div class="inside">
            <div class="icon">&#x1F6C8;</div>
            <div class="contents">
              <%= product.description %> 
            </div>
          </div>
          <div class="card__actions">
            <a class="btn" type="submit" href="/admin/edit-product/<%= product.id %>?edit=true">Edit</a>
            <form action="/admin/delete-product" method="POST">
                <input type="hidden" value="<%= product.id %>" name="productId">
                <button class="btn" type="submit">Delete</button>
            </form>  
          </div>
        </article>
        <% } %>
      </div>
      <% } else{ %>
      <h1>No Products Found</h1>
      <% } %>
    </main>
  </body>
</html>
